---
const { items = [] } = Astro.props; 
---

<style>
  ul {
    list-style-type: none;
    padding: 0;
    max-width: 100%;
    width: 800px;
    margin: 0 auto;
    margin-right: 50px;
  }
  li {
    padding: 1px;
    font-family: monospace;
    width: 100%;
    box-sizing: border-box;
    color: rgb(255, 255, 255);
    border-radius: 5px;
  }
</style>

<ul>
  {Array.isArray(items) ? (
    items.map(item => <li>- {item}</li>)
  ) : (
    <li>error, no items to show</li>
  )}
</ul>
